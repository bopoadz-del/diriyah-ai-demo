# Copy to .env for local development or Docker Compose.

# OpenAI (optional; leave blank to use stubbed responses).
OPENAI_API_KEY=

# Database (optional; defaults to local SQLite).
DATABASE_URL=sqlite:///./app.db

# Redis (optional; defaults to local Redis if running with compose).
REDIS_URL=redis://localhost:6379/0

# Google Drive service account (optional; leave blank for fixture data).
GOOGLE_SERVICE_ACCOUNT=

# Google Drive public API key (required for public folder ingestion).
GDRIVE_PUBLIC_API_KEY=
GDRIVE_PUBLIC_TIMEOUT_SECONDS=60

# Demo data mode (true = fixture data, false = live Google Drive).
USE_FIXTURE_PROJECTS=true

# Logging verbosity for the backend.
LOG_LEVEL=INFO

# Optional intelligence tuning.
UNCERTAINTY_THRESHOLD=0.3
CAUSAL_CONFIDENCE_LEVEL=0.9

# Enable transformer-based intent classification (disabled by default).
ENABLE_BERT_INTENT=false

# Frontend API base URL (useful when running frontend separately).
VITE_API_BASE_URL=http://localhost:8000
